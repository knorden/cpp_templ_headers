{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-Wall",
				"-Wextra",
				"-Wconversion",
				"-pedantic",
				"-Ihdr",
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/a"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}